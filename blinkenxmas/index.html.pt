<div metal:use-macro="layout">
  <div metal:fill-slot="title">Home</div>
  <div metal:fill-slot="head">
    <meta name="description" content="The homepage of the Blinken' Xmas server" />
  </div>

  <article metal:fill-slot="content">
    <p tal:condition="not store">No presets defined yet!</p>
    <p tal:condition="store">Select from one of the following presets:
    <ul id="presets">
      <li tal:repeat="preset store"><a href="update.html?preset=${preset}">${preset}</a></li>
    </ul>
    </p>
    <p><a class="button" href="create.html">Create</a></p>
  </article>
</div>
