<div metal:use-macro="layout">
  <div tal:omit-tag="1" metal:fill-slot="title">Home</div>
  <div metal:fill-slot="head">
    <meta name="description" content="The homepage of the Blinken' Xmas server" />
  </div>

  <article metal:fill-slot="content">
    <p tal:condition="not store">No presets defined yet!</p>
    <p tal:condition="not store" class="buttons">
      <a class="button" href="create.html">Create</a>
    </p>
    <form tal:condition="store">
      <p>Select from one of the following presets:</p>
      <ul id="presets">
        <li tal:repeat="preset store"><a href="#" data-preset="${preset}">${preset}</a></li>
      </ul>
      <p class="buttons">
        <a class="button" href="create.html">Create</a>
        <input type="button" id="manage" value="Manage" />
      </p>
    </form>
  </article>

  <div metal:fill-slot="scripts">
    <script src="/messages.js"></script>
    <script src="/forms.js"></script>
    <script>initIndexForm(document.forms[0]);</script>
  </div>
</div>
